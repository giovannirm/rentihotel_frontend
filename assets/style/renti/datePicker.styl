@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"

.el-date-table td.today span
	color $renti
.el-date-table td div:hover
	color $renti

.flex
	display flex
	justify-content end
	align-items center
.text
	font-size 13px
	font-family $font-family
.form__date
		position relative
		display flex
		justify-content center
		button white $input 6px white
		.el-divider--vertical
			height 3rem
			display flex
			align-self center
			margin 0
.form__date-container
		width 50%
	.form__date .datePick
		button #fff #c0c4cc 6px white

		background-color transparent
		border none

		line-height 36px
		text-align center
		position absolute
		line-height normal
		height 69px
		width 50%
		display flex
	
	.form__date .el-input
		width 100%
	.form__date .el-input__inner
		width 100%
		height 70px
		// padding right 40px
		border none
		button transparent #ffffff00 6px white
	.form__date .el-input__icon
		display none
	.date__div1
		height 100%
		width 100%
		display flex
		align-items center
		justify-content center
		justify-content space-evenly
		font-family 'Be Vietnam', sans-serif
		padding 0% 10% 0% 15%
		.day_style
			font 38px 600 #7B2DEB
	.date__div2
		{flex-column}
		font-family 'Be Vietnam', sans-serif
		span:nth-child(1)
			font 15px 500 black
		span:nth-child(2)
			font 15px 500 #666666
