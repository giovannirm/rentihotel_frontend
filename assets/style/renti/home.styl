@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"

html, body
	height 100%
	.error
		border-color red
	.error:focus
		outline-color #F99

	.valid
		border-color #5A5
		background #EFE

	::placeholder
		font(13px, 400, auto)

	.valid:focus
		outline-color #8E8

	.el-select .el-input.is-focus .el-input__inner
		border-color #7b2deb
		outline none !important

	.invalid-name
		.alert-one
			margin-bottom 0.5rem
			background-color #f10b0b

			&__content
				.el-alert__description
					text-align left !important
					width unset
					font 12px 400 white
					margin 0
			/deep/ i
				font-size 15px
				color white
.el-select-dropdown__item
	padding 0
	height 45px
.option
	display flex
	align-items center
	height 100%
	img
		width 25px
	&__label
		display flex
		flex-direction column
		margin-left 2%
		width 100%
		height 100%
		p
			height 16px
		p:nth-child(2)
			font-size 10px
.none
	display none
.show
	display block


.el-popper[x-placement^=bottom]
	box-shadow 5px 2px 18px #6d6969
.container_qty_people
	{flex-column}
	.la
		display flex
		justify-content space-between
		align-items center
		font(12px, 400, black)
		margin-bottom 5%
		.el-input-number--medium
			width 118px
		.el-input--medium .el-input__inner
			border none
		.el-input-number__decrease, .el-input-number__increase
			font 12px bold $renti
			border 2px solid $renti
			background-color white
			border-radius 10px
		// button(#ffffff, $renti, 12px, $renti)

.div-one
	background-image url('../assets/images/fondo-home.png')
	{image-center}
	{flex-column}
	{flex-center}
	height 100vh
	p
		font(27px, bold, white)
		text-align center
		// margin 0% 6% 0% 6%
		// margin-top 40%
		margin-top 3rem
		width 15rem
	.form
		position relative
		{flex-column}
		// height 45%
		justify-content space-between
		// margin 5%
		margin 1.5rem
		.template
			.el-select:required
				border 5px solid red
		.el-select
		.form__date
			margin-bottom 0.5rem
		&__send
			{flex-column}
			height 50%
			justify-content space-around
			.button-qty-people
				font(15px, bold, $input)
				height 60px
				width 100%
				margin-bottom 0.5rem
			.button-qty-people:hover, .button-qty-people:focus, .button-qty-people:visited
				button(white,$renti, 6px, $renti)
			.button-search
				font(18px, bold, white)
				width 100%
				height 60px
				background-color $btn-black
				border none
			.button-search:hover
				background-color $renti
		.el-input__inner
			height 60px
		&__date .datePick
			button(#fff, #c0c4cc, 6px, white)
			line-height 36px
			text-align center
			position absolute
			line-height normal
			height 69px
			width 50%
		&__date .el-input__inner
			width 100%
			height 70px
			padding right 40px
			button(transparent, #ffffff00, 6px, white)
			border none
			cursor pointer
.div-social
	position relative
	top -56px
	.el-alert
		width 90%
		position relative
		box-shadow 2px 2px 20px 1px
		padding 1.5% 2%
		margin 0% 5% 5%
		background-color white
		p:nth-child(1)
			font 19px bold $renti
			text-align center
			margin-bottom 3%
		p:nth-child(2)
			font 13px 400 black
			text-align justify
			margin-bottom 10%
		&__content
			margin 3% 8%
		.el-button:nth-child(1)
			.el-icon-user
				color $renti
		.el-button:nth-child(1):hover, .el-button:nth-child(1):focus
			color $renti
			background-color white
			border-color $renti
		.el-button:nth-child(2)
			color #455A9A
		.el-button:nth-child(3)
			color #C24B3C
		.el-button:nth-child(3):hover, .el-button:nth-child(2):hover
			border-color $renti
			background-color white
		.svg-inline--fa.fa-w-10
			width 1rem
.div-alert
	// position relative
	margin-top -3rem
	.el-alert
		// position relative
		top 0
		width 90%
		background-color #252432
		box-shadow 2px 2px 20px 1px
		padding 1.5% 2%
		margin 0% 5%
		&__content
			width 100%
		&__closebtn
			font-size 15px
			position absolute
			top 10px
			right 5px
		&__description
			display flex !important
			flex-direction column
			margin-right 0 !important
			align-items center
		.alert-button
			display flex
			.el-button
				width 200px
				height 50px
				margin-right 1%
			.black
				font 14px bold white
				background-color #707070
				width 100px
			.white
				font 14px bold white
				background-color transparent
				width 200px
		p
			font 14px 400 #CACACA
			margin 0
			text-align justify
			margin 5% 1%


.div-two
	margin 5%
	h4
		font(20px, bold, $renti)
	h5
		font(15px, bold, #666666)
	&__Slider
		margin 3% 0%
.el-input--suffix .el-input__inner::placeholder
	color #c4c4cf !important

@media screen and (min-width:400px)
	.container-home
		p
			width 20rem
	.div-alert .el-alert p
	.div-social .el-alert p
		width unset

@media screen and (min-width:764px)
	.form__date .datePick
		width 50%
	// .el-popper[x-placement^=bottom]
	// 	width 26%
	.container-home
		p
			font(30px, bold, white)
		.form
			align-self center
			.date_style
				width 17.5%
			&__send
				height 30%
				flex-direction row
				justify-content space-between
				span
					width 60%
				.button-qty-people
					width 95%
				.button-search
					width 40%
	.div-social
		.el-alert
			&__content
				margin 0
				width 100%
			&__description
				display flex
				align-items center
				justify-content space-around
				div
					width 40%
			p:nth-child(1)
				margin 0

@media screen and (min-width:1100px)
	.div-social
		position relative
		.el-alert
			position absolute
			top -250px
			width 25%
			margin 0
			right 39px
			&__content
				margin 0
			p
				margin 0
			p:nth-child(1)
				font-size 14px
			p:nth-child(2)
				font-size 12px
			.el-button:nth-child(1)
				font-size 11px
				padding 12px 12px
			&__description
				flex-direction column
				div
					width 100%
	.div-alert
		.el-alert
			background-color white
			box-shadow 2px 2px 20px 1px
			padding 1.5% 2%
			margin 0% 5%
			&__description
				display flex !important
				flex-direction row
				margin-right 0 !important
				align-items center
			.alert-button
				display flex
				.el-button
					height 50px
					margin-right 1%
				.black
					font 14px bold white
					background-color #252432
					width 200px
				.white
					font 14px bold #252432
					background-color white
					width 200px
			p
				font 12px 400 #333333
				margin 0 5% 0 0
@media screen and (min-width:1200px)
	.div-social .el-alert
		width 22%
