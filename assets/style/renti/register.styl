@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"

	html,body
		min-height 100vh
	.invalid-feedback
		color $error
		font-size 0.55rem
		span
			margin-left 0.5rem
	/deep/ .el-input
		&__inner
			font(0.7rem, 400, $input)
			border-radius 0px
			outline none
			border none
			border-bottom 1px solid $gray
			height 35px
		&__inner:focus
			border-bottom 1px solid $renti
	.container
		margin 0 auto
		height 100%
		{flex-column}
		justify-content center
		align-items center
		.main-window
			width 100%
		.flex
			display flex
		.window-img
			display none
		.el-card
			padding 5%
		.greeting
			p:first-child
				font(1.5em, 900, black)
			p:nth-child(2)
				font(0.9em, 400, $input)
				margin: 5% 0
				a
					font(1.1em, bold, $renti)
					cursor pointer
					text-decoration none
		.register
			.form-register
				{flex-column}
				.el-date-editor.el-input
					width 100%
					&__header
						display none
				label
					font(0.7em, 400, $input)
					margin-bottom 3%
			.bottom-form
				{flex-column}
				align-items baseline
				margin-top 1rem
				p
					font(0.7em, 200, $input)
					text-align justify
					margin-bottom 2%
				/deep/ .el-checkbox
					&__inner
						border 1px solid $renti
					&__label
						font(1em, 400, $input)
						white-space break-spaces
						vertical-align middle
					&__input.is-checked+.el-checkbox__label
						color $renti
					&__input.is-checked .el-checkbox__inner
						background-color $renti
						border-color $renti
				.button-register
					margin-top 0.8rem
					width 120px
					background-color $renti
					border-radius 20px
					font(13px, bold, white)
					align-self center
		.footer
			flex-direction column
			align-items center
			.el-button
				font(13px, bold, $input)
				border-radius 20px
				font-size 13px
			.footer-image
				align-items center
				margin-top 5%
				p
					font(11px, 400, $input)

	@media screen and (min-width:764px)
		.container
			// background url('../assets/images/background.png') no-repeat center center fixed
			// background-size cover
			display flex
			justify-content space-around
			.el-alert
				display none
			.main-window
				width 100%
				display flex
				justify-content space-around
				align-items center
				.window-img
					display inline
					width 13%
					p:nth-child(2)
						font(27px, 400, white)
					p:nth-child(3)
						font(12px, 400, white)
				.el-card
					width 33%
					padding 2% 2% 0 2%
					margin 2% 0% 2% 0%
					&__body
						padding 5px
					.button-social
						{flex-column}
						margin-bottom 0
						.button-width
							font-size 12px
					.align-vertical
						display flex
						align-items end
						label:first-child
							margin-right 2%
							width 50%
						label:nth-child(2)
							margin-left 2%
							width 50%
			.footer
				flex-direction row-reverse
				justify-content space-around
				{normalFamily}
				.el-button
					{boldFamily}
					border-radius 20px
					font-size 11px
				.footer-image
					align-items center
					margin 0
					margin-bottom 5%
					p
						font-size 11px
