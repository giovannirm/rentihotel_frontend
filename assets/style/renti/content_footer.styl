		.content_menu
				width 85%
				margin auto auto 1.5rem auto
				text-align justify
				// margin auto
				min-height 100vh
				h1
						font 24px bold $renti
						text-align left
						margin 20px 0 15px 0
				div
						.ul_class
								margin 0
								padding 0
								li
										list-style none
										padding 0.5rem 1rem 0.5rem 1rem
										span
												font 12px lighter auto
				p
					font 12px 400 $gray						
				.icon-font
						color $renti
						margin-right 3px
				.content
						margin 0.5rem 0 1rem 0
						p
								margin 0.5rem 0 0.5rem 1rem
				.sub_content
					font 12px 600 #5a5656
				span
					font 12px lighter $gray
					margin-left 3px
				.ul_class_sub
					margin-left 1.5rem
				.grid_content
					display grid		
					grid-template-rows auto auto
					justify-items center
					padding 8px
					border-radius 5px
					margin 1rem 0 1rem 0
					box-shadow 0px 0px 5px 0px rgba(0,0,0,0.75)
				.title_content
					font 13px bold $btn-black
					margin-bottom 0.5rem
				ol
					list-style-type none
				li
					list-style none
					margin-bottom 0.5rem
					font 12px initial initial
				a
					text-decoration none
			
@media only screen and (min-width:764px)
		.grid_content
			grid-template-columns auto 80%
			justify-content space-around
			justify-items unset
			box-shadow none
			border-radius 0
			padding 0		
