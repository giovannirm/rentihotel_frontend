@import url('https://fonts.googleapis.com/css?family=Be+Vietnam&display=swap" rel="stylesheet')
@import "global"
.hotel
    width 100%
    h1
        font 1rem bold $renti
    span
    p
        font 14px 400 $input
    .see
        font auto bold $renti
    .el-divider--horizontal
        margin 10px 0
    .el-alert
        width 150px
        position absolute
        z-index 10
        top 10px
        left 10px
        background-color rgba(0,0,0,0.71)
        border-color #d3d4d6
        p
            font 16px bold white
            display inline
            .el-icon-price-tag
                margin-right 5px
    
    .box_modal
        position relative
        display flex
        flex-direction column
        margin-top 1.5rem
        .el-carousel__container
            height 250px
            .el-carousel__arrow
                background-color rgba(0,0,0,0.71)
                &:hover
                    background-color $renti
        ul
            display none
        .one
            flex 1.5
            
            

            .el-image
                width 100%
                height 100%
                object-fit cover
        .two
            flex 1
            h2
                font 1rem bold $btn-black
                align-self self-start
                span
                    font 12px 400 $input
                    text-align left
            .servicios__item
                align-self self-start
                span
                    font 12px 400 $input
                    text-align left
.none
    display none
// .el-dialog__wrapper
//     overflow hidden !important

@media screen and (min-width:764px)
    .hotel
        h1
            font-size 1.5rem
        .box_modal
            flex-direction row
            .one
                margin-right 1rem
            .el-carousel__container
                height 300px
            ul
                display block
